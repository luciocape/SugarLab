<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="16dp"
    tools:layout_editor_absoluteY="169dp">

    <ImageView
        android:id="@+id/imgSeleccion3"
        android:layout_width="153dp"
        android:layout_height="197dp"
        app:layout_constraintBottom_toTopOf="@+id/btnMilei"
        app:layout_constraintEnd_toStartOf="@+id/btnReiniciar2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtElecDerecha" />

    <TextView
        android:id="@+id/txtElecDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Elige tu equipo de derecha"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.104" />

    <ImageButton
        android:id="@+id/btnBullrich"
        android:layout_width="92dp"
        android:layout_height="123dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/bullrich_s"
        android:contentDescription="Bullrich"
        android:onClick="CallDerecha"
        app:layout_constraintBottom_toBottomOf="@+id/btnMacri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/btnMacri"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btnMilei"
        android:layout_width="90dp"
        android:layout_height="123dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/milei_s"
        android:contentDescription="Milei"
        android:onClick="CallDerecha"
        app:layout_constraintBottom_toBottomOf="@+id/btnMacri"
        app:layout_constraintEnd_toStartOf="@+id/btnMacri"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnMarra"
        android:layout_width="96dp"
        android:layout_height="122dp"
        android:background="@drawable/marra_s"
        android:contentDescription="Marra"
        android:onClick="CallDerecha"
        android:padding="10px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMacri"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMilei"
        app:layout_constraintVertical_bias="0.346" />

    <ImageButton
        android:id="@+id/btnLarreta"
        android:layout_width="90dp"
        android:layout_height="122dp"
        android:background="@drawable/larreta_s"
        android:contentDescription="Larreta"
        android:onClick="CallDerecha"
        app:circularflow_radiusInDP="@string/candidato_derecha_1_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toEndOf="@+id/btnMacri"
        app:layout_constraintTop_toBottomOf="@+id/btnBullrich"
        app:layout_constraintVertical_bias="0.349" />

    <ImageButton
        android:id="@+id/btnMacri"
        android:layout_width="91dp"
        android:layout_height="123dp"
        android:layout_marginBottom="180dp"
        android:background="@drawable/macri_s"
        android:contentDescription="Macri"
        android:onClick="CallDerecha"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="117dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="Volver"
        android:text="Volver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="388dp"
        android:layout_height="66dp"
        android:layout_marginTop="96dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMacri">

        <Button
            android:id="@+id/btnIzquierda2"
            android:layout_width="124dp"
            android:layout_height="67dp"
            android:layout_weight="1"
            android:onClick="IrIzquierda"
            android:text="Equipo de izquierda" />

        <Button
            android:id="@+id/btnLucha2"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:onClick="IrLucha"
            android:text="Lucha" />

        <Button
            android:id="@+id/btnDerecha2"
            android:layout_width="108dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="IrDerecha"
            android:text="Equipo de derecha" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnReiniciar2"
        android:layout_width="75dp"
        android:layout_height="74dp"
        android:background="@drawable/reinicio"
        android:contentDescription="Reinicio"
        android:onClick="Reiniciar"
        app:layout_constraintBottom_toTopOf="@+id/btnMacri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412" />

    <ImageView
        android:id="@+id/imgSeleccion4"
        android:layout_width="145dp"
        android:layout_height="188dp"
        app:layout_constraintBottom_toTopOf="@+id/btnBullrich"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnReiniciar2"
        app:layout_constraintTop_toBottomOf="@+id/txtElecDerecha" />

</androidx.constraintlayout.widget.ConstraintLayout>