<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="CallMilei"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtElecDerecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Elige tu equipo de derecha"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.049" />

    <LinearLayout
        android:layout_width="424dp"
        android:layout_height="65dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMacri"
        app:layout_constraintVertical_bias="0.801">

        <Button
            android:id="@+id/izquierda"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="presionarDigito"
            android:text="Equipo de izquierda" />

        <Button
            android:id="@+id/lucha"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center|center_horizontal|center_vertical"
            android:onClick="presionarDigito"
            android:text="Lucha" />

        <Button
            android:id="@+id/derecha"
            android:layout_width="108dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:onClick="presionarDigito"
            android:text="Equipo de derecha" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnBullrich"
        android:layout_width="92dp"
        android:layout_height="123dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/bullrich_s"
        android:contentDescription="boton de bullrich"
        app:layout_constraintBottom_toBottomOf="@+id/btnMacri"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/btnMacri"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/btnMilei"
        android:layout_width="90dp"
        android:layout_height="123dp"
        android:layout_marginBottom="108dp"
        android:background="@drawable/milei_s"
        android:contentDescription="boton de milei"
        android:onClick="presionarDigito"
        app:layout_constraintBottom_toBottomOf="@+id/btnMacri"
        app:layout_constraintEnd_toStartOf="@+id/btnMacri"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/btnMarra"
        android:layout_width="96dp"
        android:layout_height="122dp"
        android:background="@drawable/marra_s"
        android:contentDescription="boton de marra"
        android:onClick="presionarDigito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnMacri"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMilei"
        app:layout_constraintVertical_bias="0.346" />

    <ImageButton
        android:id="@+id/btnMacri"
        android:layout_width="91dp"
        android:layout_height="123dp"
        android:layout_marginBottom="196dp"
        android:background="@drawable/macri_s"
        android:contentDescription="boton de macri"
        android:onClick="presionarDigito"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="165dp"
        android:layout_marginTop="92dp"
        android:background="#009688"
        android:src="@drawable/alberto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <ImageButton
        android:id="@+id/btnLarreta"
        android:layout_width="92dp"
        android:layout_height="124dp"
        android:background="@drawable/larreta_s"
        android:contentDescription="boton de larreta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMacri"
        app:layout_constraintTop_toBottomOf="@+id/btnBullrich"
        app:layout_constraintVertical_bias="0.35" />

</androidx.constraintlayout.widget.ConstraintLayout>