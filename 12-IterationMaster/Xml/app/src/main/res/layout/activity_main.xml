<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/lytBackground"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:background="#D3C6C6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="60dp"
                android:text="Iteration Master"
                android:textAlignment="center"
                android:textSize="60sp" />

            <TextView
                android:id="@+id/txtResultado"
                android:layout_width="match_parent"
                android:layout_height="294dp"
                android:paddingTop="80dp"
                android:textAlignment="center"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnIterar"
                    android:layout_width="182dp"
                    android:layout_height="74dp"
                    android:layout_weight="1"
                    android:backgroundTint="#0B0707"
                    android:onClick="iterationMaster"
                    android:text="Iterar"
                    app:cornerRadius="@dimen/cardview_default_radius" />

                <Button
                    android:id="@+id/btnReiniciar"
                    android:layout_width="184dp"
                    android:layout_height="67dp"
                    android:layout_weight="1"
                    android:backgroundTint="#1FBC03"
                    android:onClick="reset"
                    android:text="Reiniciar"
                    app:cornerRadius="@dimen/cardview_default_radius" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>