<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7C75A3"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="394dp"
        android:layout_height="422dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgCoca"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgSprite"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgFanta"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgPepsi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgManaos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgGuarana"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgPasoToros"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgVillaVicencio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/img7up"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgRedBull"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgJapi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />

                <ImageView
                    android:id="@+id/imgMonster"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@tools:sample/avatars" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="398dp"
        android:layout_height="114dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txtDinero"
            android:layout_width="394dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:text="1000$"
            android:textAlignment="center"
            android:textSize="96sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="204dp"
        android:layout_height="87dp"
        android:orientation="horizontal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btnMisCompras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#F0F80C"
            android:text="Mis Compras"
            android:textAlignment="center"
            android:textColor="#D108D1"
            android:textSize="24sp"
            app:cornerRadius="@android:dimen/app_icon_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytComprar"
        android:layout_width="409dp"
        android:layout_height="377dp"
        android:background="#02021C"
        android:baselineAligned="false"
        android:gravity="center|center_horizontal"
        android:orientation="vertical"
        android:textAlignment="center"
        android:visibility="gone"
        app:circularflow_defaultRadius="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="382dp"
            android:layout_height="225dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProducto"
                android:layout_width="224dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="267dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="48sp" />

                <TextView
                    android:id="@+id/txtPrecio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="24sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnComprar"
            android:layout_width="196dp"
            android:layout_height="96dp"
            android:backgroundTint="#02475C"
            android:text="Comprar"
            android:textSize="34sp"
            app:cornerRadius="@dimen/cardview_compat_inset_shadow" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>